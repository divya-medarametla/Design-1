class MinStack {
    Stack<Integer> s;
    int min;

    public MinStack() {
        s = new Stack<>();
        min = Integer.MAX_VALUE;
    }

    public void push(int val) {
        if (val <= min) {
            s.push(min); // Store the previous min value
            min = val;   // Update the new min value
        }
        s.push(val);
    }

    public void pop() {
        if (s.pop() == min) {
            min = s.pop(); // Update min to the previous min value
        }
    }

    public int top() {
        return s.peek();
    }

    public int getMin() {
        return min;
    }
}
